{
	"name": "amaneko",
	"version": "0.0.1",
	"author": "killbasa <contact@shaneb.xyz>",
	"license": "MIT",
	"private": true,
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/killbasa/templates.git",
		"directory": "templates/node-ts"
	},
	"homepage": "https://github.com/killbasa/templates/tree/main/templates/node-ts",
	"engines": {
		"node": ">=20.x"
	},
	"scripts": {
		"build": "tsup",
		"check": "tsc",
		"dev": "tsup --watch --onSuccess \"pnpm start\"",
		"start": "node --preserve-symlinks --enable-source-maps ./dist/KBot.js",
		"lint": "eslint --ext ts src tests && pnpm check",
		"lint:fix": "eslint --fix --ext ts src tests",
		"format": "prettier --write --log-level=warn \"{src,tests}/**/*.{js,ts,json}\"",
		"test": "vitest --watch=false",
		"test:watch": "vitest -w",
		"build:docker": "docker buildx build -t killbasa/amaneko ."
	},
	"dependencies": {
		"@sapphire/fetch": "^2.4.1",
		"@sapphire/framework": "^4.5.3",
		"@sapphire/pieces": "^3.7.0",
		"@sapphire/plugin-logger": "^3.0.6",
		"bufferutil": "^4.0.7",
		"discord.js": "^14.13.0",
		"dotenv": "^16.3.1",
		"utf-8-validate": "^6.0.3",
		"zlib-sync": "^0.1.8",
		"zod": "^3.22.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.7.1",
		"@commitlint/config-conventional": "^17.7.0",
		"@kbotdev/eslint-config": "^1.1.0",
		"@kbotdev/prettier-config": "^1.0.0",
		"@kbotdev/ts-config": "^1.0.0",
		"@swc/core": "^1.3.80",
		"@types/node": "^20.5.7",
		"eslint": "^8.48.0",
		"husky": "^8.0.3",
		"prettier": "^3.0.3",
		"tsup": "^7.2.0",
		"typescript": "^5.2.2",
		"vitest": "^0.34.3"
	},
	"lint-staged": {
		"*.{mjs,cjs,js,ts}": [
			"eslint --fix --ext js,ts",
			"prettier --write --loglevel=warn \"**/*.{mjs,cjs,js,ts}\""
		],
		"*.{json,yml,yaml,md}": [
			"prettier --write --loglevel=warn \"**/*.{json,yml,yaml,md}\""
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	}
}
